{
  "$id": "https://kmk142789.github.io/little-footsteps-bank/schemas/childcare_voucher.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LittleFootstepsChildcareVoucher",
  "type": "object",
  "required": ["id", "familyName", "givenName", "householdSize", "voucher"],
  "properties": {
    "id": { "type": "string", "minLength": 10 },
    "familyName": { "type": "string", "minLength": 1 },
    "givenName": { "type": "string", "minLength": 1 },
    "householdSize": { "type": "integer", "minimum": 1 },
    "voucher": {
      "type": "object",
      "required": ["program", "hours", "value"],
      "properties": {
        "program": { "type": "string" },
        "hours": { "type": "integer", "minimum": 0 },
        "value": {
          "type": "object",
          "required": ["amount", "currency"],
          "properties": {
            "amount": { "type": "number", "minimum": 0 },
            "currency": { "type": "string", "minLength": 3, "maxLength": 8 }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
