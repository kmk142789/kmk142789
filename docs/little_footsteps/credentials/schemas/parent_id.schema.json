{
  "$id": "https://kmk142789.github.io/little-footsteps-bank/schemas/parent_id.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LittleFootstepsParentID",
  "type": "object",
  "required": ["id", "caregiverName", "childNames", "enrollmentVerified"],
  "properties": {
    "id": { "type": "string", "minLength": 10 },
    "caregiverName": { "type": "string", "minLength": 3 },
    "childNames": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 }
    },
    "enrollmentVerified": { "type": "boolean" },
    "contact": {
      "type": "object",
      "properties": {
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
