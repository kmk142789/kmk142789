{
  "$id": "https://kmk142789.github.io/little-footsteps-bank/schemas/staff_license.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LittleFootstepsStaffLicense",
  "type": "object",
  "required": ["id", "staffName", "licenseNumber", "issuedAt", "expiresAt"],
  "properties": {
    "id": { "type": "string", "minLength": 10 },
    "staffName": { "type": "string", "minLength": 3 },
    "licenseNumber": { "type": "string", "minLength": 5 },
    "issuedAt": { "type": "string", "format": "date-time" },
    "expiresAt": { "type": "string", "format": "date-time" },
    "roles": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "backgroundCheck": {
      "type": "object",
      "properties": {
        "provider": { "type": "string" },
        "completed": { "type": "boolean" },
        "reference": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
