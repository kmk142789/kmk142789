{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://kmk142789.github.io/little-footsteps-bank/schemas/donation_receipt.schema.json",
  "title": "DonationReceiptCredential",
  "type": "object",
  "properties": {
    "donation": {
      "type": "object",
      "required": ["ledgerEventId", "amount", "minorAmount", "minorUnitDecimals", "method", "occurredAt", "reference"],
      "properties": {
        "ledgerEventId": { "type": "string", "format": "uuid" },
        "amount": {
          "type": "object",
          "required": ["currency", "value"],
          "properties": {
            "currency": { "type": "string", "minLength": 3 },
            "value": { "type": "string", "pattern": "^\\d+(?:\\.\\d{1,18})?$" }
          }
        },
        "minorAmount": { "type": "string", "pattern": "^-?\\d+$" },
        "minorUnitDecimals": { "type": "integer", "minimum": 0, "maximum": 18 },
        "method": { "type": "string", "enum": ["BTC", "ETH", "STRIPE", "PAYPAL"] },
        "occurredAt": { "type": "string", "format": "date-time" },
        "reference": { "type": "string", "minLength": 1 },
        "donor": { "type": ["string", "null"], "minLength": 1 },
        "transaction": { "type": ["string", "object", "null"] },
        "memo": { "type": ["string", "null"], "maxLength": 500 }
      }
    }
  },
  "required": ["donation"],
  "additionalProperties": false
}
