{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://kmk142789.github.io/little-footsteps-bank/schemas/impact_payout.schema.json",
  "title": "ImpactPayoutCredential",
  "type": "object",
  "properties": {
    "payout": {
      "type": "object",
      "required": [
        "ledgerEventId",
        "amount",
        "minorAmount",
        "minorUnitDecimals",
        "beneficiary",
        "purpose",
        "occurredAt",
        "reference"
      ],
      "properties": {
        "ledgerEventId": { "type": "string", "format": "uuid" },
        "amount": {
          "type": "object",
          "required": ["currency", "value"],
          "properties": {
            "currency": { "type": "string", "minLength": 3 },
            "value": { "type": "string", "pattern": "^\\d+(?:\\.\\d{1,18})?$" }
          }
        },
        "minorAmount": { "type": "string", "pattern": "^-?\\d+$" },
        "minorUnitDecimals": { "type": "integer", "minimum": 0, "maximum": 18 },
        "beneficiary": { "type": "string", "minLength": 1 },
        "vendor": { "type": ["string", "null"], "minLength": 1 },
        "purpose": { "type": "string", "minLength": 1 },
        "occurredAt": { "type": "string", "format": "date-time" },
        "reference": { "type": "string", "minLength": 1 },
        "supportingDocs": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "default": []
        },
        "tags": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "default": []
        }
      }
    }
  },
  "required": ["payout"],
  "additionalProperties": false
}
