{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Echo Wish Manifest",
  "type": "object",
  "properties": {
    "version": { "type": "string" },
    "wishes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["wisher", "desire"],
        "properties": {
          "wisher": { "type": "string" },
          "desire": { "type": "string" },
          "catalysts": { "type": "array", "items": { "type": "string" } },
          "created_at": { "type": "string", "format": "date-time" },
          "status": { "type": "string", "enum": ["new", "in_progress", "realized", "archived"] }
        }
      }
    }
  },
  "required": ["version", "wishes"]
}
