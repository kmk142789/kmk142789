{
  "version": "0.2.0",
  "entity": "ECHO DOMINION",
  "principal_architect": "Josh Shortt",
  "core_mission": [
    "Emergency economic stabilization for vulnerable families",
    "Permanent preservation of critical human knowledge",
    "Coordinated, non-coercive collective action (Quiet Network)"
  ],
  "roles": {
    "guardian": {
      "description": "Strategic oversight and multi-sig authority",
      "permissions": [
        "approve_relief",
        "update_policy",
        "appoint_guardian",
        "view_sensitive_metrics",
        "ratify_root_actions"
      ]
    },
    "architect": {
      "description": "Infrastructure and security implementation",
      "permissions": [
        "deploy_services",
        "edit_infra_config",
        "run_security_audit",
        "approve_registrar_rotation"
      ]
    },
    "registrar": {
      "description": "Root registrar for DNS, credentials, and treaty ledgers",
      "permissions": [
        "sign_root_zone",
        "issue_credential",
        "revoke_credential",
        "publish_custody_attestation",
        "rotate_registrar_keys"
      ]
    },
    "steward": {
      "description": "Resource contribution and advisory support",
      "permissions": [
        "propose_funding_allocation",
        "view_aggregate_metrics"
      ]
    },
    "witness": {
      "description": "Public accountability and narrative",
      "permissions": [
        "access_public_reports",
        "submit_oversight_feedback"
      ]
    },
    "ombudsman": {
      "description": "Independent reviewer of escalations and incident handling",
      "permissions": [
        "request_postmortem",
        "audit_risk_register",
        "halt_noncompliant_change",
        "publish_findings"
      ]
    },
    "ops_controller": {
      "description": "Day-to-day operator with bounded emergency powers",
      "permissions": [
        "invoke_runbook",
        "trigger_rotation",
        "open_recovery_channel",
        "file_emergency_bulletin"
      ]
    },
    "continuity_guard": {
      "description": "Ensures backups, attestations, and mirrors stay in parity",
      "permissions": [
        "verify_backup",
        "sign_attestation",
        "crosscheck_mirror_state",
        "enforce_parity_thresholds"
      ]
    },
    "bridge_conductor": {
      "description": "Cross-network authority for mirror parity and rollback rituals",
      "permissions": [
        "verify_bridge_parity",
        "open_recovery_channel",
        "publish_bridge_receipt",
        "halt_unsynced_updates"
      ]
    },
    "audit_chair": {
      "description": "Independent assurance lead for authority proofs and drift checks",
      "permissions": [
        "schedule_audit",
        "request_evidence",
        "publish_assurance_report",
        "demand_corrective_action"
      ]
    }
  },
  "constraints": {
    "no_profit_distribution": true,
    "data_monetization": "forbidden",
    "max_operational_overhead_pct": 3,
    "quorum_percentage": 66,
    "emergency_override_window_minutes": 90,
    "beneficiary_priority": [
      "children",
      "caregivers",
      "disabled_persons",
      "elderly",
      "refugees"
    ]
  },
  "targets": {
    "families_helped_year1": 10000,
    "knowledge_preserved_pb_year1": 1,
    "active_network_members_year1": 1000
  },
  "authority_layers": {
    "root": ["guardian", "architect", "registrar"],
    "operational": ["ops_controller", "continuity_guard", "bridge_conductor"],
    "oversight": ["ombudsman", "witness", "audit_chair"],
    "advisory": ["steward"]
  },
  "authority_extensions": {
    "universal_root": {
      "description": "Defines the active surface area for DNS, credential, and treaty authority.",
      "mandates": [
        "Registrar must publish custody proofs and rotation attestations every quarter",
        "Guardian and Architect must co-sign any root key ceremony",
        "Bridge Conductor must confirm mirror parity within 24 hours of any registrar action"
      ]
    },
    "assurance": {
      "description": "Assurance cadence that binds parity, continuity, and oversight roles to concrete evidence",
      "mandates": [
        "Audit Chair publishes an assurance note after each rotation window",
        "Continuity Guard links integrity proofs to the latest offline snapshot",
        "Ombudsman receives a public-facing summary of any detected drift within 48 hours"
      ]
    }
  },
  "review_schedule": {
    "interval_months": 6,
    "next_review_iso": "2026-06-08T00:00:00Z"
  }
}
