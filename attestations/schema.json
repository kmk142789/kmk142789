{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Echo Manifest",
  "type": "object",
  "required": ["version", "components", "meta", "fingerprint"],
  "properties": {
    "version": { "type": "string" },
    "fingerprint": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
    "meta": {
      "type": "object",
      "required": ["generator", "schema"],
      "additionalProperties": false,
      "properties": {
        "generator": { "type": "string" },
        "schema": { "type": "string" }
      }
    },
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "type", "path", "version", "digest", "dependencies"],
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string", "enum": ["engine", "state", "akit"] },
          "path": { "type": "string" },
          "version": { "type": "string" },
          "digest": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
          "dependencies": { "type": "array", "items": { "type": "string" } }
        }
      }
    }
  },
  "additionalProperties": false
}
