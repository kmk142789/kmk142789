{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "puzzle.schema.json",
  "title": "Colossus Puzzle Artifact",
  "allOf": [
    {"$ref": "artifact.schema.json"},
    {
      "type": "object",
      "required": ["puzzle_type", "glyph_matrix", "hint"],
      "properties": {
        "type": {
          "const": "puzzle"
        },
        "puzzle_type": {
          "type": "string",
          "enum": ["p2pkh", "p2pk"]
        },
        "glyph_matrix": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1,
              "maxLength": 1
            }
          }
        },
        "hint": {
          "type": "string"
        }
      }
    }
  ]
}
