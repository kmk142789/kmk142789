{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://echo.dev/schemas/echo_schema_v1.json",
  "title": "Echo Puzzle Map Entry",
  "type": "object",
  "required": [
    "puzzle",
    "address",
    "address_family",
    "hash160",
    "pkscript",
    "ud",
    "lineage",
    "tested",
    "updated_at"
  ],
  "properties": {
    "puzzle": {
      "type": "integer",
      "minimum": 0
    },
    "address": {
      "type": "string",
      "minLength": 1
    },
    "address_family": {
      "type": "string",
      "minLength": 2
    },
    "hash160": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{40}$"
    },
    "pkscript": {
      "type": "object",
      "required": ["asm", "hex"],
      "properties": {
        "asm": {"type": "string", "minLength": 1},
        "hex": {
          "type": "string",
          "pattern": "^[0-9a-fA-F]+$"
        }
      },
      "additionalProperties": true
    },
    "ud": {
      "type": "object",
      "required": ["domains", "owner", "records"],
      "properties": {
        "domains": {
          "type": "array",
          "items": {"type": "string"}
        },
        "owner": {
          "type": ["string", "null"]
        },
        "records": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        }
      },
      "additionalProperties": true
    },
    "lineage": {
      "type": "object",
      "required": ["source_files", "commit", "pr"],
      "properties": {
        "source_files": {
          "type": "array",
          "items": {"type": "string"}
        },
        "commit": {
          "type": ["string", "null"],
          "minLength": 0
        },
        "pr": {
          "type": ["string", "null"],
          "minLength": 0
        }
      },
      "additionalProperties": true
    },
    "tested": {
      "type": "boolean"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": true
}
