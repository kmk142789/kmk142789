{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "narrative.schema.json",
  "title": "Colossus Narrative Artifact",
  "allOf": [
    {"$ref": "artifact.schema.json"},
    {
      "type": "object",
      "required": ["layers", "related_artifacts"],
      "properties": {
        "type": {
          "const": "narrative"
        },
        "layers": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["title", "content"],
            "properties": {
              "title": {"type": "string"},
              "content": {"type": "string"}
            },
            "additionalProperties": false
          }
        },
        "related_artifacts": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    }
  ]
}
