{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://kmk142789.github.io/kmk142789/schemas/case_outcome.schema.json",
  "title": "Case Outcome Ledger Entry",
  "type": "object",
  "required": [
    "entry_id",
    "case_id",
    "timestamp",
    "stage",
    "outcome_type",
    "summary",
    "owner"
  ],
  "properties": {
    "entry_id": {"type": "string", "minLength": 1},
    "case_id": {"type": "string", "minLength": 1},
    "timestamp": {"type": "string", "format": "date-time"},
    "stage": {
      "type": "string",
      "enum": [
        "intake",
        "triage",
        "investigation",
        "deliberation",
        "decision",
        "implementation",
        "closed",
        "archived"
      ]
    },
    "outcome_type": {
      "type": "string",
      "enum": ["decision", "settlement", "escalation", "closure", "handoff", "update"]
    },
    "summary": {"type": "string", "minLength": 1},
    "owner": {"type": "string", "minLength": 1},
    "artifacts": {"type": "array", "items": {"type": "string"}},
    "metrics": {"type": "object", "additionalProperties": {"type": ["number", "string"]}},
    "notes": {"type": "string"}
  }
}
